<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/main_row_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:baselineAligned="true"
        android:orientation="horizontal"
        android:padding="8dp" >

       
        <FrameLayout
            android:id="@+id/roster_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp" >

            <ImageView
                android:id="@+id/group_roster_avatar"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitCenter"
                
                android:src="@drawable/mondobar_jewel_friends_on" />
        </FrameLayout>
       

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:orientation="horizontal" >

            <co.uk.tusksolutions.extensions.RobotoRegularTextView
                android:id="@+id/chatroom_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="TEST_CHATROOMS"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/chat_room_join_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:scaleType="fitCenter"
               />
        </RelativeLayout>
    </LinearLayout>

    <!-- Divider line layout -->

    <LinearLayout
        android:id="@+id/divider_layout_frame"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="25dp"
        android:baselineAligned="true" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#EEE" />
    </LinearLayout>

</LinearLayout>