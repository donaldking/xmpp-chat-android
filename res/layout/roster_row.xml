<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/main_row_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <FrameLayout
            android:id="@+id/avatar_frame"
            android:layout_width="60dp"
            android:layout_height="60dp" >

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/roster_avatar"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>
        </FrameLayout>

        <co.uk.tusksolutions.extensions.RobotoBoldTextView
            android:id="@+id/roster_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_weight="2"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Donald King"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <co.uk.tusksolutions.extensions.RobotoLightTextView
            android:id="@+id/roster_presence_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="online"
            android:textColor="@color/silver" />
    </LinearLayout>

</LinearLayout>