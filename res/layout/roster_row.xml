<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/main_row_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:paddingRight="20dp" >

        <FrameLayout
            android:id="@+id/avatar_frame"
            android:layout_width="60dp"
            android:layout_height="60dp" >

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/roster_avatar"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />
        </FrameLayout>

        <co.uk.tusksolutions.extensions.RobotoRegularTextView
            android:id="@+id/roster_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="2"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Donald King"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/roster_presence_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal"
            android:visibility="gone" 
            android:baselineAligned="true">

            <ImageView
                android:id="@+id/online_caret_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/orca_active_now"
                android:baselineAlignBottom="true" />

            <co.uk.tusksolutions.extensions.RobotoBoldTextView
                android:id="@+id/roster_presence_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="some presence"
                android:layout_marginLeft="2dp"
                android:textAllCaps="true"
                android:textColor="@color/light_green"
                android:textSize="12sp"
                android:baselineAlignBottom="true" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>