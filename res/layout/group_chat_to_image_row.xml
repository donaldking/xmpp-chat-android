<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="vertical"
    android:paddingBottom="3dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="3dp" >

    <co.uk.tusksolutions.extensions.RobotoLightTextView
        android:id="@+id/chat_to_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="3dp"
        android:text="To Receiver"
        android:textColor="@color/yookos_blue"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/imageSent"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/chat_to_background_image"
        android:padding="3dp"
        android:scaleType="fitCenter" />

    <co.uk.tusksolutions.extensions.RobotoLightTextView
        android:id="@+id/chat_to_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="3dp"
        android:text="25 mins ago"
        android:textColor="@color/silver"
        android:textSize="12dp" />

</LinearLayout>